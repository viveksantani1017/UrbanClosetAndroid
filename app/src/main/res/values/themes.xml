<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LoginScreen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#5857f3</item>
        <item name="colorPrimaryVariant">#403ffc</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#7171DA</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="editTextStyle">@style/EditTextCustomHolo</item>
    </style>
    <style name="EditTextCustomHolo" parent="android:Widget.EditText">
<!--        <item name="android:textColor">#0000ff</item>-->
        <item name="cornerRadius">10sp</item>
        <item name="android:background">#c0c0c0</item>
        <item name="android:textColor"></item>
    </style>

    <style name="button_style"
        parent="Widget.MaterialComponents.Button">
        <item   name="android:background">@drawable/button</item>
        <item name="backgroundTint">#c0c0c0</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="textview_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>